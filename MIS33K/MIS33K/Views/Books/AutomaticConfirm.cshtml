@model MIS33K.Models.Book

@{
    ViewBag.Title = "AutomaticConfirm";
}

<h2>AutomaticConfirm</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Book</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.BookID)
        @Html.HiddenFor(model => model.BookID)
        @Html.HiddenFor(model => model.CustomerRegularPrice)
        @Html.HiddenFor(model => model.CustomerDiscountedPrice)
        @Html.HiddenFor(model => model.CustomerPrice)
   
        @Html.HiddenFor(model => model.PendingOrder)
        @Html.HiddenFor(model => model.PublicationDate)
        @Html.HiddenFor(model => model.PurchaseHistory)
        @Html.HiddenFor(model => model.ReoderPoint)
        @Html.HiddenFor(model => model.Title)
  
        @Html.HiddenFor(model => model.BookSKU)
        @Html.HiddenFor(model => model.ProfitMargin)
        @Html.HiddenFor(model => model.OrderAmountRecieved)
        @Html.HiddenFor(model => model.Genre)
        @Html.HiddenFor(model => model.CountonHand)
        @Html.HiddenFor(model => model.AuthorLName)
        @Html.HiddenFor(model => model.AuthorFName)
       
        @Html.HiddenFor(model => model.cost)
        @Html.HiddenFor(model => model.ProcurementShoppingCart)

       
        <div class="form-group">
            @Html.LabelFor(model => model.ProcurementShoppingCart, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProcurementShoppingCart, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProcurementShoppingCart, "", new { @class = "text-danger" })
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Procure These Books" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Automatic Reorder", "AutoMaticProcurement")
</div>

<div>
    *Note: Any number input into this page submits an order for all books below the reodrer point.
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
